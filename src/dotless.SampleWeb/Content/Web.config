<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="dotless" type="dotless.Core.configuration.DotlessConfigurationSectionHandler,dotless.Core" />
  </configSections>

  <dotless minifyCss="true" cache="true" handleWebCompression="true" strictMath="false" httpExpiryInMinutes="5">
    <plugin name="Rtl">
      <pluginParameter name="onlyReversePrefixedRules" value="false" />
      <pluginParameter name="forceRtlTransform" value="false" />
    </plugin>      
  </dotless>

  <system.webServer>
    <handlers>
      <add name="dotlessHttpHandler" verb="*" path="*.less" type="dotless.Core.LessCssHttpHandler" />
    </handlers>
  </system.webServer>
</configuration>
